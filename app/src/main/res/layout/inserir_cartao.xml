<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner" />
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <android.support.design.widget.TextInputLayout
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <EditText
                    android:hint="Número do cartão"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:id="@+id/txtNumeroCartao" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <EditText
                    android:hint="Código"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:id="@+id/txtCodigoSeguranca" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Limite do cartão"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/txtLimiteCartao" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Dia de vencimento da fatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDiaVencimentoFatura" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="Data de fechamento da fatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDiaFechamentoFatura" />
    </android.support.design.widget.TextInputLayout>



</LinearLayout>