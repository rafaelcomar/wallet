<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.edu.unifor.ewallet.activities.CadastroReceitaActivity"
    tools:showIn="@layout/activity_cadastro_receita"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_valor_receita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginBottom="6dp"
            android:hint="Valor"/>

    </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/edt_data_entrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:hint="Data de Entrada"/>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:hint="Descricao"/>

    </android.support.design.widget.TextInputLayout>


    <Spinner
        android:id="@+id/select_tipo_receita"
        android:layout_width="match_parent"
        android:entries="@array/tiposReceitas"
        android:layout_marginBottom="6dp"
        android:layout_height="40dp"/>

    <Spinner
        android:id="@+id/select_contas"
        android:layout_width="match_parent"
        android:entries="@array/tiposContas"
        android:layout_height="40dp"/>

    <CheckBox
        android:id="@+id/checkbox_recebido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:hint="Foi Recebido"/>

    <CheckBox
        android:id="@+id/checkbox_fixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:hint="Receita Fixa"/>

    <Button
        android:id="@+id/btn_cadastra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="Cadastrar Receita"/>

</LinearLayout>

